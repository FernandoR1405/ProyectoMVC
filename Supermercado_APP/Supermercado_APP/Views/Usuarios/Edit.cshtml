@model Supermercado_APP.Models.tblUsuario

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Usuario</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Usu_Id)

        <div class="col-md-6">
            @Html.LabelFor(model => model.Usu_UsuarioNombre, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="form-group">
                @Html.EditorFor(model => model.Usu_UsuarioNombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Usu_UsuarioNombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-6">
            @Html.LabelFor(model => model.Usu_Contrasena, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="form-group">
                @Html.EditorFor(model => model.Usu_Contrasena, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Usu_Contrasena, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-6">
            @Html.LabelFor(model => model.Usu_EsAdmin, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="form-group">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Usu_EsAdmin)
                    @Html.ValidationMessageFor(model => model.Usu_EsAdmin, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        
        <div class="col-md-offset-2 col-md-12">
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-success btn-block" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.ActionLink("Regresar", "Index", null, new {@class = "btn btn-default btn-block", @Style = "background: #00ACB1; color: #FFF;" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}

