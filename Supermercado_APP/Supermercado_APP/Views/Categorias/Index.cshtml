@model IEnumerable<Supermercado_APP.Models.VW_Categorias>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    th {
        background: #212529;
        color: #FFF;
    }
</style>

<p>
    @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-info" })
</p>
<hr />

<table id="example" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id_Cate }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Detalle", "Details", new { id = item.Id_Cate }, new { @class = "btn btn-secondary" }) |
                    <button class="btn btn-danger" onclick="modal(@item.Id_Cate)">Desactivar</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- MODAL CATEGORIA DELETE -->
<div class="modal" tabindex="-1" role="dialog" id="CategoriaDelete">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="row">
                    <div class="col-md-12">
                        <h5 class="modal-title">Eliminar Categoria</h5>
                    </div>
                </div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="form-row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <h4><center>La categoria</center> <center style="color: #000;">será eliminada</center></h4>
                            <label style="color: #000;" for="">Desea Continuar?</label>
                            <input type="hidden" name="IdCatD">
                        </div>
                        <div class="col-md-12">
                            <div class="row">

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input class="btn btn-block btn-danger" onclick="eliminar()" type="submit" value="Desactivar">
                                    </div>
                                </div>


                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input class="btn btn-block btn-secondary " onclick="Close();" type="button" value="Cancelar">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- FIN MODAL CATEGORIA DELETE -->


    <script>
        let idCat;
        function modal(id) {
            Id_Cate = id;
            $("#CategoriaDelete").modal();
        }

        function eliminar() {
            window.location.href = "Categorias/Delete/" + Id_Cate;
        }

        function Close() {
            $("#CategoriaDelete").modal("hide");
        }
    </script>
