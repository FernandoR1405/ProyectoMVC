@model Supermercado_APP.Models.tblUsuario
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>

    <title>Login</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/Content/assets/css/Login-Styles.css">

</head>
<body>

    <div class="container" id="container">

        <div class="form-container sign-in-container">
            <form action="@Url.Action("Index","Login")" method="post">
                <h1>Login_</h1>
                <br>
                <input type="text" placeholder="Usuario" name="Usu_UsuarioNombre" />
                <input type="password" placeholder="Contraseña" name="txtpass" />
                <br>
                <p style="color:red;">@Html.ValidationMessageFor(model => model.Usu_UsuarioNombre)</p>
                <button type="submit">Iniciar Session</button>
            </form>
        </div>
        
        <div class="overlay-container">
            <div class="overlay">

                <div class="overlay-panel overlay-right">
                    <h1>Bienvenido/a!</h1>
                    <p>Slogan del Supermercado</p>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
